{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\tools\\make.bat",
            },
            "args": [
                "${workspaceFolder}",
                "${workspaceFolderBasename}"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "always"
            },
            "problemMatcher": {
                "owner": "go",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\d+:\\s+(.*)$",
                    "file":1,
                    "line": 2,
                    "message": 3
                }
            }
        }
    ]
}
